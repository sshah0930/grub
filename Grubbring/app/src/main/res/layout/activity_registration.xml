<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamgrub.grubbring.Activities.RegistrationActivity"
    android:background="@color/colorLoginBackGround">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Become a Grubbling!"
        android:id="@+id/headerTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="35dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <View android:id="@+id/separator"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/headerTextView"
        android:backgroundTint="@color/colorPrimaryText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill in your information below to create an account and connect to Grubbrings!"
        android:id="@+id/fillInfoTextView"
        android:layout_below="@+id/headerTextView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:paddingTop="7dp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameEditText"
        android:hint="First Name"
        android:layout_below="@+id/fillInfoTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="#D3D3D3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameEditText"
        android:hint="Last Name"
        android:layout_below="@+id/firstNameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="#D3D3D3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailAddressEditText"
        android:hint="E-mail Address"
        android:layout_below="@+id/lastNameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#D3D3D3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordEditText"
        android:hint="Password"
        android:layout_below="@+id/emailAddressEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="#D3D3D3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPasswordEditText"
        android:hint="Confirm Password"
        android:layout_below="@+id/passwordEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="#D3D3D3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phoneEditText"
        android:hint="Phone Number"
        android:layout_below="@+id/confirmPasswordEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="#D3D3D3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes! Subscribe me to your newsletter"
        android:id="@+id/subscribeCheckBox"
        android:layout_below="@+id/phoneEditText"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryText"
        android:backgroundTint="@color/colorPrimaryText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/createAccountButton"
        android:layout_below="@+id/subscribeCheckBox"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/colorPrimaryText"
        android:textColor="@color/colorLoginBackGround"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By creating an account, you agree to our Terms of Use and Privacy Policy"
        android:id="@+id/termsTextView"
        android:layout_below="@+id/createAccountButton"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="10dp"
        android:textColor="@color/colorPrimaryText"
        />


</RelativeLayout>
